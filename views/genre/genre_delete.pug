extends ../layout

block content
  h1 #{title}: #{genre.name}
  
  
  if genre_books.length
  
    p #[strong Xóa các sách sau trước khi cố gắng xóa Thể loại này.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Sách
    
      dl
      each book in genre_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Bạn có thực sự muốn xóa Thể loại này không?
    
    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )

      button.btn.btn-primary(type='submit') Xóa
